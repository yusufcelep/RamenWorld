<h1 class= "label" style="text-align: center; background-color: #011F2E; color: #fff;">
    <strong style="color: #fff;">
        My Recommendations
    </strong>
</h1>

<div class="container" style="display: flex; justify-content: center">
    <table class="table">
        <thead>
            <tr class="is-selected">
                <th class="row">
                    Ramen
                </th>

                <th class="row">
                    Comments
                </th>
                
                <th class="row" colspan="3"></th>
            </tr>
        </thead>

        <tbody>
            <% @recommendations.each do |recommendation| %>
                <tr>
                    <td class="row-content">
                        <p>
                            <%= link_to Ramen.find(recommendation.ramen_id).ramen_with_shop, ramen_path(Ramen.find(recommendation.ramen_id)) %>
                        </p>
                    </td>

                    <td class="row-content">
                        <p>
                            <%= recommendation.comments %>
                        </p>
                    </td>

                    <td class="row-content">
                        <p>
                            <%= link_to 'Edit', edit_recommendation_path(recommendation) %>
                        </p>
                    </td>

                    <td class="row-content">
                        <p>
                            <%= button_to 'Delete Recommendation', recommendation, method: :delete, class:"button-is-primary" %>
                        </p>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>

<br>
<br>

<footer class="footer">
    <div class="content has-text-centered">
        <p>
            <strong>
            <%= link_to 'Back to User', user_path(@current_user) %> |
            <%= link_to 'Add a Recommendation', new_recommendation_path %>
            </strong>
        </p>
    </div>
</footer>