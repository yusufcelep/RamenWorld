<h1 class= "label" style="text-align: center; background-color: #011F2E; color: #fff;">
    <strong style="color: #fff;">
        Current Shop
    </strong>
</h1>

<div style="display: flex; justify-content: center">
    <div class="has-text-justified" style="display: block; margin-left: auto; margin-right: auto; ">
        <p>
            <strong>
                Name: <%= @shop.name %>
            </strong>
        </p>

        <p>
            <strong>
                Location: <%= @shop.location %>
            </strong>
        </p>

        <p>
            <strong>
                Address: <%= @shop.address %>
            </strong>
        </p>

        <p>
            <strong>
                Average Rating: <%= @shop.avg_rating %>
            </strong>
        </p>

        <p>
            <strong>
                <%= link_to 'Review This Shop', new_shop_review_path %>
            </strong>
        </p>
    </div>
</div>

<br>

<br>

<div class="container" style="display: flex; justify-content: space-around">
    <table class="table" style="width: 300px;">
        <thead>
            <tr class="is-selected">
                <th class= "row">
                    Ramen Menu:
                </th>
            </tr>
        </thead>

        <tbody>
            <% @shop.ramens.each do |ramen| %>
                <tr>
                    <td class="row-content">
                        <p>
                            <%= link_to ramen.name, ramen_path(ramen) %>
                        </p>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>

    <table class="table" style="width: 700px;">
        <thead>
            <tr class="is-selected">
                <th class="row">
                    Reviews:
                </th>
            </tr>
        </thead>

        <tbody>
            <% @shop.shop_reviews.each do |review| %>
                <tr>
                    <td class="row-content">
                        <p>
                            Rating: <%= "#{review.rating} - #{review.review}" %>
                        </p>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>

<br>

<footer class="footer">
    <div class="content has-text-centered">
        <p>
            <strong>
                <%= link_to 'Back To Shops', shops_path %>
            </strong>
        </p>
    </div>
</footer>